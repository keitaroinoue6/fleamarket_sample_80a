.Pickup-category
  %h2.Pickup-category__title ピックアップカテゴリー
  .Pickup-category__product
    .Pickup-category__product__subtitle
      = link_to "#" do
        %h3.Pickup-category__product__subtitle__name 新規投稿商品
    .Pickup-category__product__lists
      .Pickup-category__product__lists__list
        = link_to "#" do
          .Pickup-category__product__lists__list__picture
            = image_tag asset_path("material/icon/icon-01.png")
          .Pickup-category__product__lists__list__body
            .Pickup-category__product__lists__list__body__name test
            .Pickup-category__product__lists__list__body__details
              %ul
                %li 10000円
                %li
                  =icon('fa','star')
                  4
              %p （税込）

      .Pickup-category__product__lists__list
        - @items.each do |item|
          .Pickup-category__product__lists__list__picture
            = link_to item_path(:id) do
              = image_tag item.images.first.src.url, size:'220*150'
          .Pickup-category__product__lists__list__body
            .Pickup-category__product__lists__list__body__name
              = item.name
            .Pickup-category__product__lists__list__body__details
              %ul
                %li= "#{item.price}円"
                %li
                  =icon('fa','star')
                  4
              %p（税込）
              - if item.trading_status == 2
                .item-sold-out-box
                  .item-sold-out-box__inner
                    SOLD
-# = link_to image_tag ("#{item.images.first.src.url}", size:'220*150'),new_item_path
-# = link_to "出品する",new_item_path, class:"list__title"


